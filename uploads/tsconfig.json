{
  "compilerOptions": {
    "target": "ES2020",                  // Version de JavaScript cible
    "module": "commonjs",               // Utiliser le module CommonJS (compatible Node.js)
    "rootDir": "src",                   // Dossier source
    "outDir": "dist",                   // Dossier de sortie pour le code compilé
    "strict": true,                     // Activer toutes les vérifications strictes
    "esModuleInterop": true,            // Compatibilité avec les modules ES
    "forceConsistentCasingInFileNames": true, // Cohérence des noms de fichiers
    "skipLibCheck": true                // Ignorer la vérification des types des bibliothèques
  },
  "include": ["src/**/*"],              // Inclure tous les fichiers dans src
  "exclude": ["node_modules", "dist"]  // Exclure les dossiers inutiles
}