  "scripts": {
    "test": " concurrently \"npm run test-front\" \"npm run test-back\" ",
    "dev": " concurrently \"npm run dev-front\" \"npm run dev-back\" ",
    "dev-front": "cd client && npm run dev-front",
    "dev-back": "cd server && npm run dev-back",
    "lint-front": "cd client && npm run lint",
    "lint-back": "cd server && npm run lint",
    "test-front": "cd client && npm run test",
    "test-back": "cd server && npm run test",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "**/*": [
      "npm run lint-front",
      "npm run lint-back"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
