{
  "name": "stockmanage",
  "version": "1.0.0",
  "author": "",
  "license": "ISC",
  "description": "",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "unit-tests": "echo 'TODO: Run Unit Tests'",
    "test": " concurrently \"npm run test-front\" \"npm run test-back\" ",
    "dev": " concurrently \"npm run dev-front\" \"npm run dev-back\" ",
    "lint": "eslint --fix",
    "dev-front": "npm run dev --workspace=client",
    "dev-back": "npm run dev --workspace=server",
    "lint-front": "npm run lint --workspace=client",
    "lint-back": "npm run lint --workspace=server",
    "test-front": "npm run test --workspace=client",
    "test-back": "npm run test --workspace=server",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "api//*.{js,ts}": [
      "npm run lint-back",
      "npm run format --workspace=server"
    ],
    "client//*.{js,jsx,ts,tsx}": [
      "npm run lint-front",
      "npm run format --workspace=client"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3"
  }
}
