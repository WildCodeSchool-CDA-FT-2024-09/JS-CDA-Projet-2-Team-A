{
  "name": "stockmanage",
  "version": "1.0.0",
  "author": "",
  "license": "ISC",
  "description": "",
  "scripts": {
    "unit-tests": "echo 'TODO: Run Unit Tests'",
    "test": " concurrently \"npm run test-front\" \"npm run test-back\" ",
    "dev": " concurrently \"npm run dev-front\" \"npm run dev-back\" ",
    "lint": "eslint --fix --ignore-path .gitignore",
    "dev-front": "npm run dev --prefix client",
    "dev-back": "npm run dev --prefix server",
    "lint-front": "npm run lint --prefix client",
    "lint-back": "npm run lint --prefix server",
    "test-front": "npm run test --prefix client",
    "test-back": "npm run test --prefix server",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "server/**/*.{js,ts}": [
      "npm run lint-back",
      "npm run format --prefix server"
    ],
    "client/**/*.{js,jsx,ts,tsx}": [
      "npm run lint-front",
      "npm run format --prefix client"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3"
  }
}
